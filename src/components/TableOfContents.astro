---
export interface TocHeading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: TocHeading[];
}

const { headings } = Astro.props;

// Filter to only h2 and h3
const tocHeadings = headings.filter((h) => h.depth === 2 || h.depth === 3);
---

{
  tocHeadings.length > 0 && (
    <nav class="toc-container hidden lg:block" aria-label="Table of Contents">
      <div class="toc-wrapper">
        <h2 class="toc-title">目录</h2>
        <ul class="toc-list">
          {tocHeadings.map((heading) => (
            <li
              class:list={[
                "toc-item",
                { "toc-item-h3": heading.depth === 3 },
              ]}
            >
              <a href={`#${heading.slug}`} class="toc-link">
                {heading.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </nav>
  )
}

<style>
  .toc-container {
    position: fixed;
    top: 120px;
    right: max(calc((100vw - 768px) / 2 - 280px), 20px);
    width: 220px;
    max-height: calc(100vh - 160px);
    overflow-y: auto;
  }

  .toc-wrapper {
    padding: 1rem;
    border-left: 2px solid #e2e8f0;
  }

  :global(.dark) .toc-wrapper {
    border-left-color: #334155;
  }

  .toc-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: #64748b;
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  :global(.dark) .toc-title {
    color: #94a3b8;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin-bottom: 0.5rem;
  }

  .toc-item-h3 {
    padding-left: 1rem;
  }

  .toc-link {
    display: block;
    font-size: 0.875rem;
    color: #475569;
    text-decoration: none;
    line-height: 1.4;
    transition: color 0.2s ease;
  }

  .toc-link:hover {
    color: #2337ff;
  }

  :global(.dark) .toc-link {
    color: #94a3b8;
  }

  :global(.dark) .toc-link:hover {
    color: #60a5fa;
  }

  /* Hide on screens where sidebar would overlap content */
  @media (max-width: 1280px) {
    .toc-container {
      display: none;
    }
  }
</style>
